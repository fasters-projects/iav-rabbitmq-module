{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,    
    "declarationDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": "src"    
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}